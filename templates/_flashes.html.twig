{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="mb-4 p-4 rounded-md {{ label == 'success' ? 'bg-green-100 border-green-400 text-green-700' : 'bg-red-100 border-red-400 text-red-700' }}" role="alert">
            <p class="font-bold">{{ label|capitalize }}</p>
            <p>{{ message }}</p>
        </div>
    {% endfor %}
{% endfor %}

