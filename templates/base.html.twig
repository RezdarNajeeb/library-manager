<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Library Manager{% endblock %}</title>
    {% block stylesheets %}
    {% endblock %}
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    {% block javascripts %}
    {% endblock %}
</head>
<body class="bg-gray-100 text-gray-800 font-sans">
<nav class="bg-gray-800 text-white shadow-md">
    <div class="container mx-auto px-6 py-4 flex justify-between items-center">
        {# --- Brand/Logo Link --- #}
        <a href="{{ path('home') }}" class="text-xl font-bold hover:text-gray-300 transition-colors">
            Library Manager
        </a>

        {# --- Navigation Links --- #}
        {% set currentRoute = app.request.attributes.get('_route') %}
        <div class="flex items-center space-x-6">
            <a href="{{ path('home') }}"
               class="{{ currentRoute starts with 'app_home' ? 'text-white font-semibold' : 'text-gray-300' }} hover:text-white transition-colors">
                Home
            </a>
            <a href="{{ path('books_index') }}"
               class="{{ currentRoute starts with 'app_book' ? 'text-white font-semibold' : 'text-gray-300' }} hover:text-white transition-colors">
                Books
            </a>
            <a href="{{ path('categories_index') }}"
               class="{{ currentRoute starts with 'app_category' ? 'text-white font-semibold' : 'text-gray-300' }} hover:text-white transition-colors">
                Categories
            </a>
            <a href="{{ path('books_new') }}"
               class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors">
                Add New Book
            </a>
        </div>
    </div>
</nav>

<main class="container mx-auto px-6 py-8">
    {% include '_flashes.html.twig' %}
    {% block body %}{% endblock %}
</main>
</body>
</html>
