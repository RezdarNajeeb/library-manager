{% extends 'base.html.twig' %}

{% block title %}
    Home - Library Manager
{% endblock %}

{% block body %}
    {# Page Header #}
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800">Welcome to your Library</h1>
        <p class="text-lg text-gray-600 mt-1">Here's a quick overview of your collection.</p>
    </div>

    {# Stats & Actions Bar #}
    <div class="bg-white p-6 rounded-lg shadow-md mb-8 flex flex-col md:flex-row items-start md:items-center justify-between">
        <div class="flex items-center space-x-8">
            <div>
                <p class="text-sm font-medium text-gray-500">Total Books</p>
                <p class="text-2xl font-bold text-gray-800">{{ totalBooks }}</p>
            </div>
            <div>
                <p class="text-sm font-medium text-gray-500">Categories</p>
                <p class="text-2xl font-bold text-gray-800">{{ totalCategories }}</p>
            </div>
        </div>
        <div class="flex items-center space-x-4 mt-4 md:mt-0">
            <a href="{{ path('books_index') }}" class="text-blue-600 font-medium hover:underline transition-colors">
                Browse All Books
            </a>
            <a href="{{ path('books_new') }}" class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-lg transition-colors">
                Add New Book
            </a>
        </div>
    </div>

    {# Recent Books Section #}
    {% if recentBooks is not empty %}
        <div class="bg-white rounded-lg shadow-md">
            <div class="p-6 border-b border-gray-200">
                <h2 class="text-2xl font-semibold text-gray-800">Recently Added Books</h2>
            </div>
            <ul class="divide-y divide-gray-200">
                {% for book in recentBooks %}
                    <li class="flex items-center justify-between p-4 hover:bg-gray-50 transition-colors">
                        <div>
                            <a href="{{ path('books_show', {'id': book.id}) }}" class="font-medium text-gray-900 hover:text-blue-600 transition-colors">
                                {{ book.title }}
                            </a>
                            <p class="text-sm text-gray-600">by {{ book.author }}</p>
                        </div>
                        <div class="text-right">
                             <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                {{ book.category.name }}
                            </span>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    {% else %}
        {# Empty State for when there are no books #}
        <div class="bg-white rounded-lg shadow-md p-8 text-center">
            <div class="text-gray-400 mb-4">
                <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v11.494m-9-5.747h18"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 3v18"></path></svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-700 mb-2">Your Library is Empty</h3>
            <p class="text-gray-600 mb-4">Start building your collection by adding your first book.</p>
            <a href="{{ path('books_new') }}"
               class="inline-flex items-center px-4 py-2 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-colors">
                Add Your First Book
            </a>
        </div>
    {% endif %}
{% endblock %}
